<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_error_view_component"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nero">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_error_view_component"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_view_height_error_view_component"
        android:layout_marginBottom="@dimen/image_margin_bottom_view_error_view_component"
        android:src="@drawable/alert_icon"
        app:layout_constraintBottom_toTopOf="@id/message_error_view_component" />

    <TextView
        android:id="@+id/message_error_view_component"
        style="@style/P2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_text_error_view_component"
        android:textColor="@color/text_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.lucasdias.ui_components.button.ButtonComponent
        android:id="@+id/retry_button_error_view_component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/retry_button_margin_bottom_error_view_component"
        app:buttonColorType="primary"
        app:buttonCornerType="softRound"
        app:buttonSizeType="large"
        app:buttonText="@string/retry_button_text_error_view_component"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>