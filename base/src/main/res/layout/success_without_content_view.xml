<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_first">

    <ImageView
        android:id="@+id/icon_success_without_content_view"
        android:layout_width="@dimen/width_icon_success_without_content_view"
        android:layout_height="@dimen/height_icon_success_without_content_view"
        android:src="@drawable/cat_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/P3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingHorizontal="@dimen/padding_horizontal_text_success_without_content_view"
        android:text="@string/text_success_without_content_view"
        android:textColor="@color/text_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_success_without_content_view" />
</androidx.constraintlayout.widget.ConstraintLayout>