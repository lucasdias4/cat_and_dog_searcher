<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_animal_detail_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_first"
    android:orientation="vertical"
    android:padding="@dimen/padding_layout_animal_detail_section">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/title_card_view_animal_detail_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation_title_card_view_animal_detail_section"
        android:paddingHorizontal="@dimen/padding_horizontal_title_card_view_animal_detail_section">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_fourth"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_animal_detail_section"
                style="@style/U1_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="@dimen/max_width_title_animal_detail_section"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/padding_horizontal_title_animal_detail_section"
                android:textColor="@color/text_second" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/text_animal_detail_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/P3_bold"
        android:textColor="@color/text_first" />

</LinearLayout>